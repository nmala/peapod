<h1>All Podcasts</h1>

<% @podcasts.each do |p| %>

  <%= image_tag("#{p.image}") %>
  <%= link_to p.name, podcast_path(p) %>

  <% if current_user.podcasts.include?(p) == false %>
      <%= form_for @subscription do |f| %>
      <%= hidden_field_tag :podcast_id, p.id %>
      <%= f.submit "Subscribe"%>
      <% end %>

    <% else %>
      <p>Subscribed</p>
  <% end %>

<% end %>
